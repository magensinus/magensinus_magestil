/* Billboard */

- if @object.image_box.presence
  .billboard{ style: "background-image: url(#{image_path @object.image_box_url.to_s})" }
    .billboard-box
      .billboard-item
        .separator.medium
        %h1.white-100-cl= @object.title
        .trix.white-100-cl
          = safe_join([@object.description])

- else
  .billboard
    .billboard-box
      .billboard-item
        .separator.medium
        %h1.white-100-cl= @object.title
        .trix.white-100-cl
          = safe_join([@object.description])
