/* Index */

.container-top.left
  / Breadcrumbs
  .breadcrumbs
    .breadcrumbs-box
      .breadcrumbs-item
        = link_to root_path, class: "link small" do
          .icon.left
            = image_tag "icons/back.png"
          = t("home")

.container-middle.left
  / Content
  .content
    .content-box
      .content-item
        - if @students.title.presence
          %h1= @students.try(:title)
        .separator.small
        - if @students.description.presence
          .trix
            = safe_join([@students.try(:description).html_safe])

  .separator.small

  = render partial: "wallets"

.container-bottom.left
