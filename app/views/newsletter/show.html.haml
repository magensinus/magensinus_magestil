/* Index */

.container-top.left
  .breadcrumbs
    .breadcrumbs-box
      .breadcrumbs-item
        = link_to root_path, class: "link small" do
          .icon.left
            = image_tag "icons/back.png"
          = t("home")

.container-middle.left

  .content
    .content-box
      .content-item
        - if @object.title.presence
          %h1= @object.try(:title)
        .separator.small
        - if flash[:success]
          %p.medium.green-ft= flash[:success]
        - elsif flash[:failure]
          %p.medium.red-ft= flash[:failure]
        - else
          - if @object.description.presence
            .trix
              = safe_join([@object.try(:description).html_safe])

- unless flash[:success]
  = render "form", object: @subscription

.container-bottom.left
