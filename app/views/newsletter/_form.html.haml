// Form

= form_tag "/newsletter/subscribe", method: :post, autocomplete: "off", remote: false, class: "form" do
  %fieldset.form-box
    .form-item
      .form-row
        // Email
        .field
          .input.text-center
            = email_field_tag "email[address]", nil, placeholder: "O seu email...", autofocus: false, required: ""
        // Submit
        .field
          .submit
            = button_tag "Subscrever", type: :submit, data: { disable_with: "Please wait a moment..." }, class: "button double-extra-large blue wide"
