// Form

= form_tag "/newsletter/subscribe", method: :post, autocomplete: "off", remote: false, class: "col-extra-large-1-1 altai-center" do
  %fieldset
    .form-row
      // Email
      .field.col-extra-large-4-3
        .input.text-center
          = email_field_tag "email[address]", nil, placeholder: "O seu email...", autofocus: false
      // Submit
      .field.col-extra-large-4-1
        .submit
          = button_tag "Subscrever", type: :submit, data: { disable_with: "Please wait a moment..." }, class: "button extra-large blue wide"
