/* Index */

.container-top.left
  .breadcrumbs
    .breadcrumbs-box
      .breadcrumbs-item
        = link_to root_path, class: "link small" do
          .icon.left
            = image_tag "icons/back.png"
          = t("home")

.container-middle.left

  .content
    .content-box
      .content-item
        - if @object.title.presence
          %h1= @object.try(:title)
        .separator.small
        - if @object.description.presence
          .trix
            = safe_join([@object.try(:description).html_safe])

  .separator.small

  .wallets
    .wallets-box
      - @wallet_categories.each do |wallet_category|
        - wallet_category.assets.each do |asset|
          .wallets-item
            .wallets-inner
              = link_to asset.document_box_url.to_s, target: :blank do
                .icon.left
                  = image_tag "icons/underscore.png"
                - if asset.document_caption.presence
                  = asset.document_caption
                - else
                  = t("document")

.container-bottom.left
