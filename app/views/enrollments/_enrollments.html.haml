/* Content */

.content
  .content-box
    .content-item
      - if object.title.presence
        %h1= object.try(:title)
      - if settings.enrollment_description
        %p= settings.enrollment_description
    - if flash[:success]
      .content-item.green-500-bg
        %p.green-000-cl= flash[:success]
    - if flash[:failure]
      .content-item.red-500-bg
        %p.red-000-cl= flash[:failure]
      .separator.small
